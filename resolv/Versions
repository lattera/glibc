libc {
  GLIBC_2.0 {
    # global variables
    _h_errno; _res;

    # helper functions
    __h_errno_location;

    # functions used in other libraries
    __res_randomid;

    # variables in normal name space
    h_errlist; h_errno; h_nerr;

    # h*
    herror; hstrerror;

    # r*
    res_init;
  }
}

